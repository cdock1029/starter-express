{
  "name": "remix-starter-express",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_ENV=development run-p -r dev:*",
    "dev:css": "postcss styles --base styles --dir app/ -w",
    "dev:remix": "remix run",
    "dev:tsc": "tsc -b -w",
    "dev:server": "cross-env NODE_ENV=development nodemon --delay 2 -e js --ignore app server.js",
    "build": "run-s build:*",
    "build:css": "postcss styles --base styles --dir app/ --env production",
    "build:remix": "remix build",
    "build:tsc": "tsc -b",
    "start": "node server.js"
  },
  "dependencies": {
    "@geist-ui/style": "^2.0.0",
    "@geist-ui/themes": "^1.1.0",
    "@geist-ui/typography": "^1.0.1",
    "@remix-run/cli": "^0.8.0",
    "@remix-run/data": "^0.8.0",
    "@remix-run/express": "^0.8.0",
    "@remix-run/react": "^0.8.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "morgan": "^1.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.0.4",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "postcss-import": "^13.0.0",
    "tailwindcss": "^2.0.1",
    "typescript": "^4.1.2"
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "engines": {
    "node": "14.x"
  }
}